{
  "name": "igem-safety-case",
  "version": "0.0.0",
  "description": "Generate a safety case diagram",
  "contributors": [
    "Mark Hernandez <mark@lion-byte.com>"
  ],
  "main": "src/index.js",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "dev": "webpack-dev-server --config webpack.dev.js --open",
    "lint": "standard",
    "lint:fix": "prettier --write **/*.js && standard --fix",
    "lint:type": "tsc --pretty",
    "test": "standard && tsc --pretty && jest --coverage"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "standard": {
    "globals": [
      "afterAll",
      "afterEach",
      "beforeAll",
      "beforeEach",
      "describe",
      "expect",
      "jest",
      "test"
    ],
    "ignore": [],
    "parser": "babel-eslint"
  },
  "hookInfo": {
    "husky": {
      "hooks": {
        "pre-commit": [
          "lint-staged"
        ]
      }
    },
    "lint-staged": {
      "*.js": [
        "prettier --write",
        "standard --fix",
        "git add"
      ],
      "*.{md,less}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "@types/d3-hierarchy": "^1.1.2",
    "@types/node": "^10.5.0",
    "@types/prop-types": "^15.5.3",
    "@types/reach__router": "^1.0.0",
    "@types/react": "^16.4.3",
    "@types/react-dom": "^16.0.6",
    "@types/react-helmet": "^5.0.6",
    "@types/react-loadable": "^5.4.0",
    "autoprefixer": "^8.6.4",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
    "babel-loader": "^7.1.4",
    "babel-plugin-dynamic-import-node": "^2.0.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^0.28.11",
    "cssnano": "^3.10.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.0.0-rc.9",
    "jest": "^23.2.0",
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "lint-staged": "^7.2.0",
    "mini-css-extract-plugin": "^0.4.0",
    "postcss-loader": "^2.1.5",
    "prerender-spa-plugin": "^3.2.1",
    "prettier": "^1.13.6",
    "standard": "^11.0.1",
    "style-loader": "^0.21.0",
    "typescript": "^2.9.2",
    "webpack": "^4.12.2",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.3"
  },
  "dependencies": {
    "@reach/router": "^1.1.1",
    "@vx/gradient": "0.0.165",
    "@vx/group": "0.0.165",
    "@vx/hierarchy": "0.0.165",
    "@vx/shape": "0.0.168",
    "babel-polyfill": "^6.26.0",
    "d3-hierarchy": "^1.1.6",
    "picnic": "^6.5.0",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-helmet": "^5.2.0",
    "react-loadable": "^5.4.0"
  }
}
